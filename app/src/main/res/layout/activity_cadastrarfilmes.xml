<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.gui.tp.cadastrarFilmes">


    <EditText
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etNome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Nome do Filme" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etGenero"
        android:layout_below="@+id/etNome"
        android:layout_centerHorizontal="true"
        android:hint="Genero"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etDiretor"
        android:layout_below="@+id/etGenero"
        android:layout_centerHorizontal="true"
        android:hint="Diretor"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etAno"
        android:layout_below="@+id/etDiretor"
        android:layout_centerHorizontal="true"
        android:hint="Ano"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etFaixa"
        android:layout_below="@+id/etAno"
        android:layout_centerHorizontal="true"
        android:hint="Faixa Etaria"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFaixa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Add" />

</RelativeLayout>
