<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">


    <TextView
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textNome"
        android:text="TextView" />

    <TextView
        android:id="@+id/textDiretor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textNome"
        android:layout_alignBottom="@+id/textNome"
        android:layout_marginStart="55dp"
        android:layout_toEndOf="@+id/textNome"
        android:text="TextView" />

    <TextView
        android:id="@+id/textAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textDiretor"
        android:layout_below="@+id/textDiretor"
        android:text="TextView" />

    <TextView
        android:id="@+id/textFaixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textDiretor"
        android:layout_alignBottom="@+id/textDiretor"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/textDiretor"
        android:text="TextView" />


</RelativeLayout>